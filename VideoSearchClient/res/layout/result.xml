<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="horizontal" >

    <TextView
        android:id="@+id/tvPageNumber"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="10dip"
        android:layout_marginRight="10dip"
        android:background="#6000"
        android:clickable="false"
        android:longClickable="false"
        android:paddingBottom="2dp"
        android:paddingLeft="7dp"
        android:paddingRight="7dp"
        android:paddingTop="2dp"
        android:text="3/8页"
        android:textColor="#fff"
        android:visibility="invisible" />

    <include
        android:id="@+id/in_topbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/header" />



    <ListView
        android:id="@+id/lvResult"
        android:layout_width="match_parent"
        android:layout_height="fill_parent"
        android:layout_above="@+id/llAd"
        android:layout_below="@+id/lltop"
        android:choiceMode="singleChoice"
        android:fadeScrollbars="false"
        android:fadingEdgeLength="0dp"
        android:scrollbars="vertical" android:visibility="invisible">

    </ListView>

    <LinearLayout
        android:id="@+id/lltop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/in_topbar"
        android:gravity="center_vertical|center_horizontal" >

        <ImageButton
            android:id="@+id/imgPreview"
            android:layout_width="wrap_content"
            android:layout_height="80dp"
            android:layout_weight="1"
            android:src="@drawable/loading" android:background="@drawable/recmenu" android:layout_margin="5dp" android:visibility="gone" android:scaleType="fitCenter"/>

        <TextView
            android:id="@+id/tvShower"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_marginBottom="5dip"
            android:layout_marginRight="10dip"
            android:layout_marginTop="5dip"
            android:text="请耐心等待..."
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="#000055" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llAd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imgAd"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ad4" />

    </LinearLayout>





    <Gallery
        android:id="@+id/glyResult"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/lvResult"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/lvResult"
        android:layout_weight="1" android:spacing="10dp" android:layout_marginBottom="5dp"/>

</RelativeLayout>